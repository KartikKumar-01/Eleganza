<!DOCTYPE html>
<html lang="en" class="h-full bg-primary">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eleganza</title>
    <link rel="stylesheet" href="/styles/output.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>

  <body>
    <div class="container bg-primary text-accent">
      <% if (success && success.length > 0) { %>
  <div class="flash flash-success"><%= success %></div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="flash flash-error"><%= error %></div>
<% } %>
      <div class="main">
        <div class="navbar">
          <div class="nav-left">
            <div class="nav-img">
              <img
                class="h-full rounded-[20px]"
                src="/images/Logo.png"
                alt=""
              />
            </div>
            <div class="msg">
              <p class="text-3xl">Welcome, Kartik</p>
            </div>
          </div>
          <div class="nav-right">
            <div class="nav-profile-info bg-secondary">
              <div class="nav-profile-img">
                <img
                  class="w-full h-full rounded-[100%]"
                  src="/images/default.jpeg"
                  alt=""
                />
              </div>
              <div class="profile-name">
                <p>Kartik</p>
              </div>
            </div>
            <button class="nav-btn">Log out</button>
          </div>
        </div>

        <div class="content">
            <div class="filters">

            </div>
            <div class="products">
              <% products.forEach((product) => { %>
                
                <div class="product" style="background-color: <%= product.panelColor %>; color: <%= product.fontColor %>">
                  <div class="w-[92%] h-[70%] bg-slate-50 m-[5px]  object-contain">
                    <img class="w-full h-full object-cover " src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                  </div>
                  <div class="w-full h-[25%] p-3 flex justify-between" style="background-color: <%= product.footerColor %>">
                    <div class="info font-medium flex flex-col">
                      <span><%= product.name %></span>
                      <span class="text-sm">₹ <%= product.price %></span>
                    </div>
                  </div>
                </div>

              <% }) %>

              <!-- <div class="product">
                  <div class="w-[92%] h-[70%] bg-slate-50 m-[5px] object-contain">
                    <img class="w-full h-full object-cover" src="" alt="">
                  </div>
                  <div class="w-full h-[25%] p-3 bg-tertiary flex justify-between">
                    <div class="info font-medium flex flex-col">
                      <span>Sweatshirt</span>
                      <span class="text-sm">₹ <%= 2000 %></span>
                    </div>
                  </div>
                </div> -->
            </div>
        </div>
      </div>
    </div>
    <script src="/javascript/flash.js"></script>
  </body>
</html>
